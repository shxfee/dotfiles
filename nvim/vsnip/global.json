{
    "Snippet Snippet": {
        "prefix": ["snip"],
        "body": [
            "\"${1:snippet_name}\": {",
            "\t\"prefix\": [\"${2:trigger_prefix}\"],",
            "\t\"body\": [",
            "\t\t\"$0\"",
            "\t],",
            "\t\"description\": \"${3:description}\"",
            "}"
        ],
        "description": "A snippet to create snippets"
    },

    "HTML Tags": {
        "prefix": ["<"],
        "body" : [
            "<$1 $2>",
            "\t$3",
            "</$1>$0"
        ],
        "description": "Insert multiline html Tag"
    },

    "HTML Inline Tags": {
        "prefix": [">"],
        "body": [
            "<$1 $2>$3</$1>$0"
        ],
        "description": "insert inline html tag"
    },

    "HTML Css attribute": {
        "prefix": ["c"],
        "body": [
            "class=\"$0\""
        ],
        "description": "css attribute"
    },

    "Blade Directive": {
        "prefix": ["@"],
        "body": [
            "@${1:section}",
            "\t$0",
            "@end$1"
        ],
        "description": "Generate a balde directive"
    },

    "console log": {
        "prefix": ["cl"],
        "body": [
            "console.log($1${2: })$0"
        ],
        "description": "console log"
    }

}
