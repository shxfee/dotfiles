	"Try Catch Block": {
		"prefix": "try",
		"body": [
			"try {",
			"\t${1://}",
			"} catch (${2:\\Exception} ${3:\\$e}) {",
			"\t${0://throw \\$e;}",
			"}"
		],
		"description": "try catch block"
	},

    "dump response": {
        "prefix": ["dr"],
        "body": [
            "\\$resp->dump();"
        ],
        "description": "dump response content"
    },

    "die and dump": {
        "prefix": ["dd"],
        "body": [
