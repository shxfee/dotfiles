    "phpunit test": {
        "prefix": ["pu"],
        "body": [
            "public function test_$1()",
            "{",
            "\t$2",
            "}$0"
        ],
        "description": "phpunit testcase function"
    },

	"function …": {
		"prefix": "fun",
		"body": [
			"${4:public }function $1($2)",
			"{",
            "\t$3",
			"}$0"
		],
		"description": "function"
    },

    "do … while …": {
        "prefix": "do",
        "body": [
